[production]
phpSettings.display_startup_errors = 0
phpSettings.display_errors = 0
includePaths.library = "/usr/share/php"
bootstrap.path = APPLICATION_PATH "/Bootstrap.php"
bootstrap.class = "Bootstrap"
appnamespace = "Application"
resources.frontController.controllerDirectory = APPLICATION_PATH "/controllers"
resources.frontController.params.displayExceptions = 0
resources.router.routes.rest.type = Zend_Rest_Route
repodir = <%= node['chef-dash']['backend']['repodir'] %>
datadir = <%= node['chef-dash']['backend']['datadir'] %>
contentdir = <%= node['chef-dash']['backend']['contentdir'] %>
paramregex.bundle = "<%= node['chef-dash']['backend']['paramregex']['bundle'] %>"
paramregex.branch = "<%= node['chef-dash']['backend']['paramregex']['branch'] %>"
paramregex.stage = "<%= node['chef-dash']['backend']['paramregex']['stage'] %>"
paramregex.envid = "<%= node['chef-dash']['backend']['paramregex']['envid'] %>"
paramregex.contentversion = "<%= node['chef-dash']['backend']['paramregex']['contentversion'] %>"
defaultbranch = <%= node['chef-dash']['backend']['defaultbranch'] %>
environment.addUsernameFromEnv = USERNAME

[staging : production]

[testing : production]
phpSettings.display_startup_errors = 1
phpSettings.display_errors = 1
resources.frontController.params.displayExceptions = 1
repodir = APPLICATION_PATH "/../tests/data/repo"
datadir = APPLICATION_PATH "/../tests/data/envs"
contentdir = APPLICATION_PATH "/../tests/data/content"
url = http://dash-test
defaultbranch = trunk

[development : testing]
